<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev.kbstudios.bestcalculator.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#eee"
            android:text="0"
            android:padding="10dp"
            android:textSize="30dp"
            android:textAlignment="viewEnd"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="-10dp" />

        <TextView
            android:id="@+id/display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#eee"
            android:text="0"
            android:padding="10dp"
            android:textSize="50dp"
            android:textAlignment="viewEnd"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="-10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">


            <Button
                android:id="@+id/num0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="0"
                android:textColor="#fff"
                android:textSize="40dp"
                android:padding="5dp"
                tools:theme="@style/AppTheme"
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/div"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="/"
                android:textColor="#fff"
                android:textSize="40dp"
                tools:theme="@style/AppTheme"
                android:padding="5dp"
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/mul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="x"
                android:textColor="#fff"
                android:textSize="40dp"
                tools:theme="@style/AppTheme"
                android:padding="5dp"
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="C"
                android:textColor="#fff"
                android:textSize="40dp"
                tools:theme="@style/AppTheme"
                android:padding="5dp"
                android:layout_margin="1dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <Button
                android:id="@+id/num7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="7"
                android:textColor="#fff"
                android:textSize="40dp"
                tools:theme="@style/AppTheme"
                android:padding="5dp"
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/num8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="8"
                android:textColor="#fff"
                android:textSize="40dp"
                tools:theme="@style/AppTheme"
                android:padding="5dp"
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/num9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="9"
                android:textColor="#fff"
                android:textSize="40dp"
                tools:theme="@style/AppTheme"
                android:padding="5dp"
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="-"
                android:textColor="#fff"
                android:textSize="40dp"
                tools:theme="@style/AppTheme"
                android:padding="5dp"
                android:layout_margin="1dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <Button
                android:id="@+id/num4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="4"
                android:textColor="#fff"
                android:textSize="40dp"
                tools:theme="@style/AppTheme"
                android:padding="5dp"
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/num5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="5"
                android:textColor="#fff"
                android:textSize="40dp"
                tools:theme="@style/AppTheme"
                android:padding="5dp"
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/num6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="6"
                android:textColor="#fff"
                android:textSize="40dp"
                tools:theme="@style/AppTheme"
                android:padding="5dp"
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="+"
                android:textColor="#fff"
                android:textSize="40dp"
                tools:theme="@style/AppTheme"
                android:padding="5dp"
                android:layout_margin="1dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <Button
                android:id="@+id/num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="1"
                android:textColor="#fff"
                android:textSize="40dp"
                tools:theme="@style/AppTheme"
                android:padding="5dp"
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="2"
                android:textColor="#fff"
                android:textSize="40dp"
                tools:theme="@style/AppTheme"
                android:padding="5dp"
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/num3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="3"
                android:textColor="#fff"
                android:textSize="40dp"
                tools:theme="@style/AppTheme"
                android:padding="5dp"
                android:layout_margin="1dp"/>

            <Button
                android:id="@+id/equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="="
                android:textColor="#fff"
                android:textSize="40dp"
                tools:theme="@style/AppTheme"
                android:padding="5dp"
                android:layout_margin="1dp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
